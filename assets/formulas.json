[
  {"category":"Time Value","name":"Future Value (Single Sum)","formula":"FV = PV × (1 + r)^n","variables":"PV: present value, r: rate per period, n: periods","explanation":"Accumulates a present amount at a periodic rate."},
  {"category":"Time Value","name":"Present Value (Single Sum)","formula":"PV = FV ÷ (1 + r)^n","variables":"FV: future value, r: rate per period, n: periods","explanation":"Discounts a future amount to today."},
  {"category":"Time Value","name":"Future Value of Annuity","formula":"FVA = P × [((1 + r)^n − 1) ÷ r]","variables":"P: payment per period, r: rate, n: periods","explanation":"Accumulation of equal periodic payments."},
  {"category":"Time Value","name":"Present Value of Annuity","formula":"PVA = P × [1 − (1 + r)^(−n)] ÷ r","variables":"P: payment per period, r: rate, n: periods","explanation":"Value today of equal periodic payments."},
  {"category":"Time Value","name":"Present Value of Perpetuity","formula":"PV = C ÷ r","variables":"C: constant payment, r: rate","explanation":"Infinite level payment stream."},
  {"category":"Time Value","name":"PV of Growing Perpetuity","formula":"PV = C1 ÷ (r − g)","variables":"C1: next period cash, r: rate, g: growth (r>g)","explanation":"Infinite payments growing at constant g."},
  {"category":"Time Value","name":"PV of Growing Annuity","formula":"PV = P × [1 − ((1 + g)/(1 + r))^n] ÷ (r − g)","variables":"P: first payment, r: rate, g: growth, n: periods","explanation":"Finite payments growing at g."},
  {"category":"Time Value","name":"Effective Annual Rate","formula":"EAR = (1 + i/m)^{m} − 1","variables":"i: nominal rate, m: compounding per year","explanation":"Converts nominal to effective."},
  {"category":"Time Value","name":"Continuous Compounding FV","formula":"FV = PV × e^{rt}","variables":"r: rate, t: time (years)","explanation":"Continuous compounding model."},
  {"category":"Time Value","name":"Continuous Compounding PV","formula":"PV = FV × e^{−rt}","variables":"r: rate, t: time (years)","explanation":"Continuous discounting."},
  {"category":"Time Value","name":"Annuity Due PV","formula":"PV_due = PVA × (1 + r)","variables":"PVA: ordinary annuity PV, r: rate","explanation":"Payments at beginning of period."},
  {"category":"Time Value","name":"Annuity Due FV","formula":"FV_due = FVA × (1 + r)","variables":"FVA: ordinary annuity FV, r: rate","explanation":"Payments at beginning of period."},
  {"category":"Time Value","name":"Loan Payment (Amortized)","formula":"Pmt = L × [r(1 + r)^n] ÷ [(1 + r)^n − 1]","variables":"L: loan principal, r: rate per period, n: periods","explanation":"Fixed payment to amortize a loan."},
  {"category":"Time Value","name":"Discount Factor","formula":"DF = 1 ÷ (1 + r)^t","variables":"r: rate, t: period","explanation":"Basic discount factor."},
  {"category":"Time Value","name":"Bond Price (Level Coupon)","formula":"P = C × [1 − (1 + y)^{−n}] ÷ y + M ÷ (1 + y)^n","variables":"C: coupon, y: yield per period, n: periods, M: maturity value","explanation":"PV of coupons plus redemption."},
  {"category":"Corp Finance","name":"Approximate YTM (Annual)","formula":"YTM ≈ [C + (M − P)/n] ÷ [(M + P)/2]","variables":"C: annual coupon, M: maturity value, P: price, n: years","explanation":"Average yield approximation."},
  {"category":"Corp Finance","name":"Current Yield","formula":"CY = Annual Coupon ÷ Price","variables":"Coupon: annual, Price: bond price","explanation":"Income yield from coupon only."},
  {"category":"Corp Finance","name":"Dividend Discount (Gordon)","formula":"P0 = D1 ÷ (k − g)","variables":"D1: next dividend, k: required return, g: growth","explanation":"Constant growth equity valuation."},
  {"category":"Corp Finance","name":"CAPM Cost of Equity","formula":"k_e = R_f + β (R_m − R_f)","variables":"R_f: risk-free, β: beta, R_m: market return","explanation":"Linear risk-return model."},
  {"category":"Corp Finance","name":"WACC","formula":"WACC = w_e k_e + w_d k_d (1 − T) + w_p k_p","variables":"w: weights, k: costs, T: tax rate","explanation":"Weighted average cost of capital."},
  {"category":"Corp Finance","name":"Cost of Debt After Tax","formula":"k_d,after = k_d × (1 − T)","variables":"k_d: pre-tax cost, T: tax rate","explanation":"Interest tax shield."},
  {"category":"Corp Finance","name":"Net Present Value","formula":"NPV = \\u2211_{t=0}^{n} CF_t ÷ (1 + r)^t","variables":"CF_t: cash flow at t, r: discount rate","explanation":"Sum of discounted cash flows."},
  {"category":"Corp Finance","name":"Profitability Index","formula":"PI = PV(Inflows) ÷ PV(Outflows)","variables":"PV: present value sums","explanation":"Value per unit invested."},
  {"category":"Corp Finance","name":"Payback Period","formula":"PB = Years before recovery + (Unrecovered ÷ CF in year)","variables":"Cumulative cash flows","explanation":"Time to recover initial outlay."},
  {"category":"Corp Finance","name":"Discounted Payback","formula":"Use discounted cash flows to compute PB","variables":"Discounted CFs","explanation":"Payback using PV of cash flows."},
  {"category":"Corp Finance","name":"Equivalent Annual Cost","formula":"EAC = NPV × [r(1 + r)^n] ÷ [(1 + r)^n − 1]","variables":"NPV: cost PV, r: rate, n: years","explanation":"Annualized cost for comparison."},
  {"category":"Corp Finance","name":"Free Cash Flow to Firm","formula":"FCFF = EBIT(1 − T) + Dep − CapEx − ΔNWC","variables":"EBIT, T, Dep, CapEx, ΔNWC","explanation":"Unlevered free cash flow."},
  {"category":"Corp Finance","name":"Free Cash Flow to Equity","formula":"FCFE = NI + Dep − CapEx − ΔNWC + Net Borrowing","variables":"NI: net income, Dep, CapEx, ΔNWC","explanation":"Cash available to equity holders."},
  {"category":"Corp Finance","name":"Retention Ratio","formula":"b = 1 − Dividend Payout Ratio","variables":"Payout = Dividends ÷ NI","explanation":"Share of earnings retained."},
  {"category":"Corp Finance","name":"Sustainable Growth Rate","formula":"g = ROE × b","variables":"ROE: return on equity, b: retention","explanation":"Growth without new equity."},
  {"category":"Corp Finance","name":"Enterprise Value","formula":"EV = Equity Value + Debt + Minority − Cash","variables":"Market cap, interest-bearing debt, cash","explanation":"Total operating value."},
  {"category":"Cost/Managerial","name":"Contribution Margin","formula":"CM = Sales − Variable Costs","variables":"Sales, Variable costs","explanation":"Amount to cover fixed costs and profit."},
  {"category":"Cost/Managerial","name":"CM Ratio","formula":"CM Ratio = CM ÷ Sales","variables":"CM, Sales","explanation":"Proportion contributing to fixed and profit."},
  {"category":"Cost/Managerial","name":"Break-even Units","formula":"Q_BE = Fixed Costs ÷ (Price − Variable Cost per Unit)","variables":"Fixed costs, Price, Variable/unit","explanation":"Units to zero profit."},
  {"category":"Cost/Managerial","name":"Break-even Sales","formula":"Sales_BE = Fixed Costs ÷ CM Ratio","variables":"Fixed costs, CM ratio","explanation":"Sales revenue to zero profit."},
  {"category":"Cost/Managerial","name":"Target Profit Units","formula":"Q_T = (Fixed Costs + Target Profit) ÷ UCM","variables":"UCM: unit contribution margin","explanation":"Units to reach target profit."},
  {"category":"Cost/Managerial","name":"Margin of Safety","formula":"MOS = Actual Sales − BE Sales","variables":"Actual sales, BE sales","explanation":"Cushion above break-even."},
  {"category":"Cost/Managerial","name":"MOS Ratio","formula":"MOS% = MOS ÷ Actual Sales","variables":"MOS, Actual sales","explanation":"Margin of safety percentage."},
  {"category":"Cost/Managerial","name":"Operating Leverage Degree","formula":"DOL = CM ÷ Operating Income","variables":"CM, Operating income","explanation":"Sensitivity of profit to sales."},
  {"category":"Cost/Managerial","name":"High-Low Variable Rate","formula":"v = (Cost_H − Cost_L) ÷ (X_H − X_L)","variables":"H/L: high and low activity, X: activity","explanation":"Estimate variable cost per unit."},
  {"category":"Cost/Managerial","name":"High-Low Fixed Cost","formula":"F = Total_H − v × X_H","variables":"v: variable rate, X_H: high activity","explanation":"Estimate fixed cost."},
  {"category":"Cost/Managerial","name":"Learning Curve","formula":"Y = aX^b, b = ln(l) ÷ ln(2)","variables":"l: learning rate (e.g., 0.8), a: first unit time","explanation":"Time declines with cumulative output."},
  {"category":"Cost/Managerial","name":"EOQ","formula":"EOQ = sqrt(2DS ÷ H)","variables":"D: demand, S: setup cost, H: holding cost/unit/year","explanation":"Optimal order quantity."},
  {"category":"Cost/Managerial","name":"Reorder Point","formula":"ROP = d × L + Safety Stock","variables":"d: demand rate, L: lead time","explanation":"Inventory level to place order."},
  {"category":"Cost/Managerial","name":"Safety Stock (Basic)","formula":"SS = z × σ_L","variables":"z: service factor, σ_L: demand sd over lead time","explanation":"Buffer for uncertainty."},
  {"category":"Cost/Managerial","name":"Average Inventory","formula":"Avg Inv = Q/2 + Safety Stock","variables":"Q: order size","explanation":"Average cycle stock plus safety."},
  {"category":"Cost/Managerial","name":"Joint Cost Phys. Qty","formula":"Allocated = Joint Cost × (Qty_i ÷ ΣQty)","variables":"Qty_i: physical output","explanation":"Physical quantity method allocation."},
  {"category":"Cost/Managerial","name":"Joint Cost Sales Value","formula":"Allocated = Joint Cost × (Sales_i ÷ ΣSales)","variables":"Sales_i: sales value at split-off","explanation":"Relative sales value method."},
  {"category":"Cost/Managerial","name":"Joint Cost NRV","formula":"Allocated = Joint Cost × (NRV_i ÷ ΣNRV)","variables":"NRV: sales − further processing − selling","explanation":"Net realizable value allocation."},
  {"category":"Variances","name":"Material Price Variance","formula":"MPV = AQ × (AP − SP)","variables":"AQ: actual qty, AP: actual price, SP: standard price","explanation":"Price effect on materials."},
  {"category":"Variances","name":"Material Quantity Variance","formula":"MQV = SP × (AQ − SQ)","variables":"SQ: standard qty for output","explanation":"Usage efficiency of materials."},
  {"category":"Variances","name":"Labor Rate Variance","formula":"LRV = AH × (AR − SR)","variables":"AH: actual hours, AR: actual rate, SR: standard rate","explanation":"Wage rate difference effect."},
  {"category":"Variances","name":"Labor Efficiency Variance","formula":"LEV = SR × (AH − SH)","variables":"SH: standard hours","explanation":"Hours used vs standard."},
  {"category":"Variances","name":"VOH Spending Variance","formula":"VOSV = AH × (AR_v − SR_v)","variables":"Variable OH rate actual vs standard","explanation":"Variable overhead price effect."},
  {"category":"Variances","name":"VOH Efficiency Variance","formula":"VOEV = SR_v × (AH − SH)","variables":"Hours variance at standard VOH rate","explanation":"Variable OH efficiency effect."},
  {"category":"Variances","name":"FOH Budget Variance","formula":"FOBV = Actual FOH − Budgeted FOH","variables":"Fixed overhead","explanation":"Spending vs budget."},
  {"category":"Variances","name":"FOH Volume Variance","formula":"FOVV = Budgeted FOH − Applied FOH","variables":"Applied = SR_f × SH","explanation":"Capacity utilization variance."},
  {"category":"Variances","name":"Sales Price Variance","formula":"SPV = AQ × (AP − SP)","variables":"Sales price actual vs standard","explanation":"Selling price effect."},
  {"category":"Variances","name":"Sales Volume Variance","formula":"SVV = SP × (AQ − SQ)","variables":"Quantity sold vs standard","explanation":"Sales volume effect."},
  {"category":"Accounting","name":"Straight-Line Depreciation","formula":"Dep = (Cost − Salvage) ÷ Life","variables":"Cost, Salvage, Life","explanation":"Equal expense per period."},
  {"category":"Accounting","name":"Declining-Balance Depreciation","formula":"Dep = Rate × Book Value","variables":"Rate: e.g., 2/Life for double-declining","explanation":"Higher early depreciation."},
  {"category":"Accounting","name":"SYD Depreciation","formula":"Dep = (Remaining Life ÷ SYD) × (Cost − Salvage)","variables":"SYD = n(n+1)/2","explanation":"Accelerated method by years."},
  {"category":"Accounting","name":"Units-of-Production Depreciation","formula":"Dep/unit = (Cost − Salvage) ÷ Total Units","variables":"Multiply by units this period","explanation":"Based on usage."},
  {"category":"Accounting","name":"Lease PV of Payments","formula":"PV = \\u2211 Payment_t ÷ (1 + r)^t + PV of residual","variables":"Lease payments, discount rate, residual","explanation":"Recognized as ROU asset and liability."},
  {"category":"Accounting","name":"ARO Initial Liability","formula":"PV = Future Removal Cost ÷ (1 + r)^n","variables":"Future cost, discount rate, years","explanation":"Present value of expected removal cost."},
  {"category":"Accounting","name":"ARO Accretion Expense","formula":"Expense = Opening ARO × r","variables":"r: credit-adjusted risk-free rate","explanation":"Increase in ARO due to passage of time."},
  {"category":"Ratios","name":"Current Ratio","formula":"Current Ratio = Current Assets ÷ Current Liabilities","variables":"Current assets, Current liabilities","explanation":"Short-term liquidity."},
  {"category":"Ratios","name":"Quick Ratio","formula":"Quick Ratio = (CA − Inventory) ÷ CL","variables":"CA: current assets, CL: current liabilities","explanation":"Stricter liquidity measure."},
  {"category":"Ratios","name":"Cash Ratio","formula":"Cash Ratio = (Cash + Securities) ÷ CL","variables":"Cash and equivalents, CL","explanation":"Most conservative liquidity."},
  {"category":"Ratios","name":"AR Turnover","formula":"AR Turnover = Credit Sales ÷ Avg AR","variables":"AR: accounts receivable","explanation":"Collection efficiency."},
  {"category":"Ratios","name":"Average Collection Period","formula":"ACP = 365 ÷ AR Turnover","variables":"Days in year","explanation":"Days to collect receivables."},
  {"category":"Ratios","name":"Inventory Turnover","formula":"Inv TO = COGS ÷ Avg Inventory","variables":"COGS, Average inventory","explanation":"Inventory movement speed."},
  {"category":"Ratios","name":"Days Inventory Outstanding","formula":"DIO = 365 ÷ Inventory Turnover","variables":"Days in year","explanation":"Days inventory held."},
  {"category":"Ratios","name":"AP Turnover","formula":"AP TO = Purchases ÷ Avg AP","variables":"AP: accounts payable","explanation":"Payment speed to suppliers."},
  {"category":"Ratios","name":"Days Payable Outstanding","formula":"DPO = 365 ÷ AP Turnover","variables":"Days in year","explanation":"Days to pay suppliers."},
  {"category":"Ratios","name":"Cash Conversion Cycle","formula":"CCC = DIO + ACP − DPO","variables":"DIO, ACP, DPO","explanation":"Cash tied in operations."},
  {"category":"Ratios","name":"Total Asset Turnover","formula":"TAT = Sales ÷ Avg Total Assets","variables":"Sales, Average assets","explanation":"Asset efficiency."},
  {"category":"Ratios","name":"Debt Ratio","formula":"Debt Ratio = Total Debt ÷ Total Assets","variables":"Liabilities, Assets","explanation":"Leverage measure."},
  {"category":"Ratios","name":"Debt-to-Equity","formula":"D/E = Total Debt ÷ Equity","variables":"Liabilities, Equity","explanation":"Capital structure leverage."},
  {"category":"Ratios","name":"Equity Multiplier","formula":"EM = Total Assets ÷ Equity","variables":"Assets, Equity","explanation":"Financial leverage factor."},
  {"category":"Ratios","name":"Interest Coverage","formula":"ICR = EBIT ÷ Interest","variables":"EBIT, Interest expense","explanation":"Ability to pay interest."},
  {"category":"Ratios","name":"Gross Margin","formula":"GM = (Sales − COGS) ÷ Sales","variables":"Sales, COGS","explanation":"Gross profitability."},
  {"category":"Ratios","name":"Operating Margin","formula":"OM = Operating Income ÷ Sales","variables":"Operating income, Sales","explanation":"Operating profitability."},
  {"category":"Ratios","name":"Net Profit Margin","formula":"NPM = Net Income ÷ Sales","variables":"Net income, Sales","explanation":"Overall profitability."},
  {"category":"Ratios","name":"ROA","formula":"ROA = Net Income ÷ Avg Assets","variables":"Net income, Average assets","explanation":"Return on assets."},
  {"category":"Ratios","name":"ROE","formula":"ROE = Net Income ÷ Avg Equity","variables":"Net income, Average equity","explanation":"Return on equity."},
  {"category":"Ratios","name":"DuPont ROE","formula":"ROE = NPM × TAT × EM","variables":"NPM, Total asset turnover, Equity multiplier","explanation":"Decomposition of ROE."},
  {"category":"Ratios","name":"EPS (Basic)","formula":"EPS = (NI − Preferred Div) ÷ Weighted Avg Shares","variables":"Net income, Preferred dividends, Shares","explanation":"Earnings per share."},
  {"category":"Ratios","name":"P/E Ratio","formula":"P/E = Price per Share ÷ EPS","variables":"Share price, EPS","explanation":"Valuation multiple."},
  {"category":"Ratios","name":"P/B Ratio","formula":"P/B = Market Price ÷ Book Value per Share","variables":"Market price, Book value/share","explanation":"Price to book multiple."},
  {"category":"Ratios","name":"Dividend Payout Ratio","formula":"Payout = Dividends ÷ Net Income","variables":"Total dividends, Net income","explanation":"Share of earnings paid as dividends."},
  {"category":"Ratios","name":"Retention Growth Link","formula":"g = ROE × (1 − Payout)","variables":"ROE, Payout","explanation":"Same as sustainable growth."},
  {"category":"Inventory/Ops","name":"Process Yield","formula":"Yield = Good Units ÷ Input Units","variables":"Good output, Input","explanation":"Production efficiency."},
  {"category":"Inventory/Ops","name":"Scrap Rate","formula":"Scrap% = Scrap Units ÷ Input Units","variables":"Scrap, Input","explanation":"Defect rate metric."},
  {"category":"Inventory/Ops","name":"Throughput Time","formula":"TPT = Processing + Inspection + Move + Queue","variables":"Component times","explanation":"Total time per unit."},
  {"category":"Inventory/Ops","name":"Manufacturing Cycle Efficiency","formula":"MCE = Processing Time ÷ TPT","variables":"Processing time, TPT","explanation":"Value-added time share."},
  {"category":"Inventory/Ops","name":"Capacity Utilization","formula":"Utilization = Actual Output ÷ Designed Capacity","variables":"Actual, Design capacity","explanation":"Use of capacity."},
  {"category":"Inventory/Ops","name":"Little’s Law","formula":"WIP = λ × W","variables":"λ: throughput rate, W: cycle time","explanation":"Average WIP in stable systems."},
  {"category":"Statistics","name":"Mean","formula":"x̄ = (\\u2211 x_i) ÷ n","variables":"x_i: observations, n: count","explanation":"Arithmetic average."},
  {"category":"Statistics","name":"Variance (Sample)","formula":"s^2 = (\\u2211 (x_i − x̄)^2) ÷ (n − 1)","variables":"x_i, x̄, n","explanation":"Sample variance."},
  {"category":"Statistics","name":"Standard Deviation","formula":"s = sqrt(s^2)","variables":"s^2: variance","explanation":"Dispersion measure."},
  {"category":"Statistics","name":"Z-Score","formula":"z = (x − μ) ÷ σ","variables":"x: value, μ: mean, σ: std dev","explanation":"Standardized value."},
  {"category":"Statistics","name":"Standard Error of Mean","formula":"SE = σ ÷ sqrt(n)","variables":"σ: std dev, n: sample size","explanation":"Uncertainty of mean estimate."},
  {"category":"FX/Intl","name":"Interest Rate Parity","formula":"F = S × (1 + r_d) ÷ (1 + r_f)","variables":"F: forward, S: spot, r_d: domestic, r_f: foreign","explanation":"No-arbitrage forward rate."},
  {"category":"FX/Intl","name":"Purchasing Power Parity","formula":"S1 = S0 × (1 + π_d) ÷ (1 + π_f)","variables":"π: inflation rates","explanation":"Inflation-adjusted exchange rate."},
  {"category":"Bonds","name":"Macaulay Duration (Approx)","formula":"D_M ≈ [\\u2211 t × PV(CF_t)] ÷ Price","variables":"t: time, PV(CF_t), Price","explanation":"Time-weighted PV of cash flows."},
  {"category":"Bonds","name":"Modified Duration","formula":"D_mod = D_M ÷ (1 + y)","variables":"D_M: Macaulay duration, y: yield per period","explanation":"Price sensitivity to yield."},
  {"category":"Bonds","name":"Convexity (Approx)","formula":"C ≈ [P(−) + P(+) − 2P0] ÷ [P0 × (Δy)^2]","variables":"P(±): prices at ±Δy","explanation":"Curvature of price-yield relation."},
  {"category":"Working Capital","name":"Net Working Capital","formula":"NWC = Current Assets − Current Liabilities","variables":"CA, CL","explanation":"Short-term financial health."},
  {"category":"Tax","name":"Effective Tax Rate","formula":"ETR = Tax Expense ÷ Pre-tax Income","variables":"Tax expense, Pre-tax income","explanation":"Average tax burden."},
  {"category":"Cash Flow","name":"Operating CF (Indirect)","formula":"CFO = NI + Noncash − ΔWC","variables":"NI, add back depreciation etc., ΔWC","explanation":"Approximate indirect CFO."},
  {"category":"Cash Flow","name":"Free Cash Flow (Simple)","formula":"FCF = CFO − CapEx","variables":"CFO, Capital expenditures","explanation":"Cash after investment."}
]
